{
    "name": "AudioSplitter Audio Grabber",
    "version": "0.3",
    "description": "Add files that you watch on youtube into the tracklist of your choice",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "js": ["parser.js"]
    }],
    "permissions": [
        "storage",
        "tabs", 
        "*://audiosplitter.fm/*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}